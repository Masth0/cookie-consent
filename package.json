{
  "name": "@masth0/cookie-consent",
  "author": "Masth0",
  "license": "MIT",
  "private": true,
  "version": "2.0.0",
  "files": [
    "dist"
  ],
  "main": "",
  "module": "",
  "scripts": {
    "pretest": "tsc --incremental -p tests/tsconfig.json",
    "test:ui": "playwright test --ui",
    "test": "playwright test -c tests-out",
    "prettier": "prettier \"./lib/*.ts\" --write",
    "types": "tsc ./lib/*.ts --declaration --emitDeclarationOnly --allowImportingTsExtensions --outDir types",
    "dev": "vite",
    "preview": "vite preview",
    "build:es6": "tsc && vite build",
    "build:es5": "npx babel dist/cookie-consent.es.js --out-file dist/cookie-consent.es5.js && terser dist/cookie-consent.es5.js --compress --mangle -o dist/cookie-consent.es5.min.js",
    "build": "rm -rf ./dist/* && npm run prettier && npm run build:es6 && npm run build:es5 && cp ./src/style.css dist/style.css"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@playwright/test": "^1.41.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@types/node": "^20.11.13",
    "playwright": "^1.41.2",
    "prettier": "^3.2.4",
    "terser": "^5.27.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.2"
  },
  "dependencies": {
    "core-js": "^3.35.1"
  },
  "prettier": {
    "printWidth": 150,
    "proseWrap": "always",
    "bracketSameLine": true
  }
}
